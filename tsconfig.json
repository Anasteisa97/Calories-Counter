{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "esnext",
    "target": "ES6",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./src/**/*"]
}